#include <windows.h>

#define IDC_TEXT_FIELD    1001
#define IDC_LABEL1        1002
#define IDC_LABEL2        1003
#define IDC_LABEL3        1004
#define IDC_LIST          1005
#define IDC_BUTTON1       1006
#define IDC_BUTTON2       1007
#define IDC_BUTTON3       1008

#define IDD_MAIN_DIALOG   101

IDD_MAIN_DIALOG DIALOGEX 0, 0, 400, 300
STYLE DS_MODALFRAME | WS_POPUP | WS_CAPTION | WS_SYSMENU | WS_THICKFRAME | WS_MINIMIZEBOX | WS_MAXIMIZEBOX
CAPTION "YouTube Cacher"
FONT 8, "MS Sans Serif"
BEGIN
    LTEXT           "URL:", IDC_LABEL1, 10, 10, 30, 14
    EDITTEXT        IDC_TEXT_FIELD, 45, 8, 260, 14, ES_AUTOHSCROLL
    
    LTEXT           "Status: Ready", IDC_LABEL2, 10, 30, 100, 14
    LTEXT           "Items: 0", IDC_LABEL3, 10, 50, 100, 14
    
    LISTBOX         IDC_LIST, 10, 70, 300, 210, LBS_STANDARD | LBS_NOTIFY
    
    PUSHBUTTON      "Download", IDC_BUTTON1, 320, 70, 70, 25
    PUSHBUTTON      "Play", IDC_BUTTON2, 320, 100, 70, 25
    PUSHBUTTON      "Delete", IDC_BUTTON3, 320, 130, 70, 25
END
